#! /bin/csh -v

set MASTER = /home/gda/master
set COFLAGS = "-rship314B"

mkdir dx
cd dx
    ln -s $MASTER/RCS .
    co makefile makefile_linux86

    mkdir bin
    cd bin
	ln -s $MASTER/bin/RCS
	co makefile
	make co
    cd ..

    mkdir lib
    cd lib
	ln -s $MASTER/lib/RCS
	co makefile
	make co
    cd ..

    mkdir include

    mkdir src
    cd src

	ln -s $MASTER/src/RCS .
	co makefile makefile_linux86


	mkdir libdx
	cd libdx
	    mkdir dx
	    cd dx
		ln -s $MASTER/src/libdx/dx/RCS .
	    cd ..
	    ln -s $MASTER/src/libdx/RCS .
	    co makefile makefile_linux86
	cd ..
    
	mkdir dxmods
	cd dxmods
	    ln -s $MASTER/src/dxmods/RCS .
	    co makefile makefile_linux86
	cd ..
    
	mkdir dpexec
	cd dpexec
	    ln -s $MASTER/src/dpexec/RCS .
	    co makefile makefile_linux86
	cd ..

	mkdir hwrender
	cd hwrender
	    mkdir opengl
	    cd opengl
		ln -s $MASTER/src/hwrender/opengl/RCS .
		co makefile makefile_linux86
	    cd ..
	    ln -s $MASTER/src/hwrender/RCS .
	    co makefile makefile_linux86
	cd ..

    mkdir ui++
    cd ui++
	mkdir widgets
	cd widgets
	    ln -s $MASTER/src/ui++/widgets/RCS .
	    co makefile makefile_linux86
	cd ..

	mkdir dxui
	cd dxui
	    ln -s $MASTER/src/ui++/dxui/RCS .
	    co makefile makefile_linux86
	cd ..

	mkdir gar
	cd gar
	    ln -s $MASTER/src/ui++/gar/RCS .
	    co makefile makefile_linux86
	cd ..

	mkdir dxl
	cd dxl
	    ln -s $MASTER/src/ui++/dxl/RCS .
	    co makefile makefile_linux86
	cd ..

	mkdir mb
	cd mb
	    ln -s $MASTER/src/ui++/mb/RCS .
	    co makefile makefile_linux86
	cd ..
	
    cd ..
cd ..

